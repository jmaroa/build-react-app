{
  "name": "cra-template-build-react-app",
  "author": "Mario Rodriguez <mario.rodriguez@buildto.io>",
  "description": "React template for Build projects",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmaroa/build-react-app",
    "directory": "/"
  },
  "engines": {
    "node": ">=10"
  },
  "private": false,
  "main": "template.json",
  "files": [
    "template",
    "template.json"
  ],
  "keywords": [
    "react",
    "create-react-app",
    "cra-template",
    "template",
    "enzyme",
    "eslint",
    "redux",
    "react-redux",
    "react-router",
    "react-router-dom",
    "prettier"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "lint:css": "stylelint './src/**/*.js'",
    "clean-files": "rm -rf ./template/public ./template/src",
    "copy-files": "rsync -avzP --exclude={'.gitignore','template','template.json','node_modules/','package.json','yarn.lock'} ??* .??* template",
    "prepublishOnly": "yarn clean-files && yarn copy-files"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/*.style.js",
      "!src/**/*.style.constants.js",
      "!<rootDir>/node_modules/**",
      "!src/serviceWorker.js",
      "!src/index.jsx",
      "!src/store.js",
      "!src/config/theme.js",
      "!src/pages/Upload/**"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text-summary"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.1.3",
    "babel-preset-airbnb": "^4.0.1",
    "eslint": "^6.2.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^2.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.17.1",
    "react-video-thumbnail": "^0.1.3",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.1",
    "stylelint-processor-styled-components": "^1.8.0"
  }
}
